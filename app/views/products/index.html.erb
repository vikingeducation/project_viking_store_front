<div class="row">
	<div class="product_header">
		<p><em>Choose from among our lineup of fine items below</em></p>
	</div>
</div>

  <div class="row">
    <div class="col-xs-12 text-right filter_row">
      <form action="<%= products_path %>" method="GET" class="form-inline">
        <div class="form-group">
          <%= select_tag(:category_id, options_for_select(@categories), {include_blank: true}) %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">
            Apply Filter
          </button>

          <button type="submit" class="btn btn-primary">
            <%= link_to "View All", products_path %>
          </button>
        </div>
      </form>
    </div>

  </div>


  
<div class="row">
	<%= render @products %>
</div>
<div class="row">
  <div class="col-xs-5 col-xs-offset-3">
   <%= will_paginate %>
  </div>
</div>

