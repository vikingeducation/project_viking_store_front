<div class="row">
	<div class="product_header">
		<p><em>Choose from among our lineup of fine items below</em></p>
	</div>

    <form action="<%= products_path %>" method="GET" class="form-inline col-xs-6 col-xs-offset-6">
      <div class="form-group">
        <%= select_tag(:category_id, options_for_select(@categories), {include_blank: true}) %>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">
        	Apply Filter
        </button>

        <button type="submit" class="btn btn-primary">
        	<%= link_to "View All", products_path %>
        </button>

      </div>
    </form>
</div>
<div class="row">
	<%= will_paginate %>
</div>
<div class="row">
	<%= render @products %>
</div>
<div class="row">
	<%= will_paginate %>
</div>

</div>