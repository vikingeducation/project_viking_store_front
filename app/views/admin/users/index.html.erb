<h2>Users</h2>

<%= link_to "Add a New User", new_admin_user_path, :class => "btn btn-large btn-primary btn-block", :role => "button" %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Join Date</th>
      <th>City</th>
      <th>State</th>
      <th>Orders</th>
      <th>Last Order Date</th>
      <th>EDIT</th>
      <th>DELETE</th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>