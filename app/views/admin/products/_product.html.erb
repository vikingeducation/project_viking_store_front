<tr>
  <td><%= product.id %></td>
  <td><%= link_to product.name, [:admin, product] %></td>
  <td><%= number_to_currency(product.price) %></td>
  <td><%= product.category.nil? ? "N/A" : (link_to product.category.name, admin_category_path(product.category)) %></td>
  <td><%= link_to "edit", edit_admin_product_path(product) %></td>
  <td><%= link_to "delete", [:admin, product], :method => :delete, :data => { confirm: "Are you sure?" } %></td>
</tr>