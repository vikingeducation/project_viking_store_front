<h2><%= index_title(@user, "Addresses") %></h2>
<div class="panel">
  <%= index_address_create(@user) %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Orders</th>
        <th>Created At</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>

      <%= render @addresses %>

    </tbody>
  </table>
</div>