<%= form_for [:admin,@category] do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.submit "Submit Edits" %>

<% end %>

<%= link_to "Delete", admin_category_path(@category), method: :delete,
      data: { confirm: "You sure?" } %>
