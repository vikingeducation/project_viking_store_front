<div class="panel">
	<h4>User Information</h4>
	<p>First Name: <%= @user.first_name %></p>
	<p>Last Name: <%= @user.last_name %></p>
	<p>Email: <%= @user.email %></p>
	<p>Telephone: <%= @user.phone_number %></p>
	<p>Default Billing Address: <%= @user.billing.nil? ? "N/A" : @user.billing.address_maker %></p>
	<p>Default Shipping Address: <%= @user.shipping.nil? ? "N/A" : @user.shipping.address_maker %></p>
<%= link_to "Edit #{@user.name}'s Information", edit_user_path(@user.id) %><br>
<%= link_to "Delete #{@user.name}", user_path(@user), :method => :delete, :data => { confirm: "Are you sure?" } %><br>
<%= link_to "View Saved Addresses", user_addresses_path(@user.id) %><br>
<%= cart_link(@user) %>
</div>